# location: backend/Makefile

# Binary name
BINARY_NAME=server

.PHONY: all
all: build test

.PHONY: build
build:
	@echo "ğŸ˜ Building Go Backend..."
	go build -o bin/$(BINARY_NAME) main.go

.PHONY: lint
lint:
	@echo "ğŸ” Linting Backend..."
	go vet ./...

.PHONY: test
test:
	@echo "ğŸ§ª Running Backend Tests..."
	go test -v ./...

.PHONY: clean
clean:
	@echo "ğŸ§¹ Cleaning Backend..."
	rm -rf bin